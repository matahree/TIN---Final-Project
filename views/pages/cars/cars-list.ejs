<%- include('../../fragments/header.ejs') %>
    <main>
        <h2><%= pageTitle %></h2>
        
        <table class="table-list">
            
            <thead>
                <tr>
                    <th><%= __('car.fields.carModel') %></th>
                    <th><%= __('car.fields.VIN') %></th>
                    <th><%= __('car.fields.color') %></th>
                    <th><%= __('car.fields.NumberOfCars') %></th>
                    <th><%= __('list.actions.title') %></th>
                </tr>
            </thead>

            <tbody>
            <% for (let car of cars) { %>
                <tr>
                    <td><%= car.carModel %></td>
                    <td><%= car.VIN %></td>
                    <td><%= car.color %></td>
                    <td><%= car.NumberOfCars %></td>
                    <td>
                        <ul class="list-actions">
                            <li>
                                <a href="/cars/details/<%=car._id%>" class="list-actions-button-details"><%= __('list.actions.details') %></a>
                            </li>
                            <li>
                                <a href="/cars/edit/<%=car._id%>" class="list-actions-button-edit"><%= __('list.actions.edit') %></a>
                            </li>
                            <li>
                                <a href="/cars/delete/<%=car._id%>" class="list-actions-button-delete"><%= __('list.actions.delete') %></a>
                            </li>
                        </ul>
                    </td>
                </tr>
            <% } %>
            </tbody>
            
        </table>

        <p><a href="/cars/add" class="button-add"><%= __('car.list.addNew') %></a></p>

        
    </main>

    <%- include('../../fragments/footer.ejs') %>